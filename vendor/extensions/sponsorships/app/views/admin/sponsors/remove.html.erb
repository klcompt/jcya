<h1>Remove Sponsor</h1>

<p>Are you sure you want to <strong class="warning">permanently remove</strong> the following sponsor?</p>

<table class="index" id="sponsors" cellpadding="0" cellspacing="0" border="0">
  <tbody>
    <tr class="node level-1">
      <td class="sponsor">
        <%= image('sponsors/sponsor', :alt => 'sponsor-icon') %>
        <%= h @sponsor.title %>
      </td>
    </tr>
  </tbody>
</table>

<% form_for [:admin, @sponsor], :html => {:method => :delete} do %>
  <p class="buttons">
    <input class="button" type="submit" value="Delete Sponsor"/>
    or
    <%= sponsor_to 'Cancel', admin_sponsors_url %>
  </p>
<%- end -%>

