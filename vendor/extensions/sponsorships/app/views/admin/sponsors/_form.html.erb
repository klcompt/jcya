<% form_for [:admin, @sponsor] do |f| %>
  <div class="form-area">
    <div  id="sponsor_form_area">
      <p class="name">
        <label for="sponsor_name">Name</label>
        <%= f.text_field "name", :class => 'textbox', :maxlength => 255 %>
      </p>
      
      <p class="url">
        <label for="sponsor_url">URL</label>
        <%= f.text_area "url", :class => 'textbox', :maxlength => 255 %>
      </p>

      <p class="description">
        <label for="sponsor_description">Description</label>
        <%= f.text_area "description", :class => 'textbox', :maxlength => 255 %>
      </p>

       <span class="clear">&nbsp;</span>
    </div>
  </div>

  <p class="buttons">
    <%= save_model_button(@sponsor) %>
    <%= save_model_and_continue_editing_button(@sponsor) %>
    or 
    <%= sponsor_to "Cancel", {:action => :index} %>
  </p>
<% end %>

