<% form_for [:admin, @link] do |f| %>
  <div class="form-area">
    <div  id="link_form_area">
      <p class="title">
        <label for="link_title">Title</label>
        <%= f.text_field "title", :class => 'textbox', :maxlength => 255 %>
      </p>

      <p class="url">
        <label for="link_url">URL</label>
        <%= f.text_area "url", :class => 'textbox', :maxlength => 255 %>
      </p>

      <p class="description">
        <label for="link_description">Description</label>
        <%= f.text_area "description", :class => 'textbox', :maxlength => 255 %>
      </p>

       <span class="clear">&nbsp;</span>
    </div>
  </div>

  <p class="buttons">
    <%= save_model_button(@link) %>
    <%= save_model_and_continue_editing_button(@link) %>
    or 
    <%= link_to "Cancel", {:action => :index} %>
  </p>
<% end %>
